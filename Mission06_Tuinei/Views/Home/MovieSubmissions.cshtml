@{
}
@model List<Mission06_Tuinei.Models.Movie>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied To Plex</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movieList in Model)
        {
            <tr>
                <td>@movieList.Category.CategoryName</td>
                <td>@movieList.Title</td>
                <td>@movieList.Year</td>
                <td>@movieList.Director</td>
                <td>@movieList.Rating</td>
                <td>@movieList.Edited</td>
                <td>@movieList.LentTo</td>
                <td>@movieList.CopiedToPlex</td>
                <td>@movieList.Notes</td>
                <td>
                    <a asp-controller="Home" asp-action="Edit" asp-route-MovieFormID="@movieList.MovieId">Edit</a> |
                    <a asp-controller="Home" asp-action="Delete" asp-route-MovieFormID="@movieList.MovieId">Delete</a>
                </td>

            </tr>
        }
    </tbody>

</table>
